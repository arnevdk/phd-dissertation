@Article{Ouyang2020,
  author     = {Ouyang, Guang},
  journal    = {Journal of Neuroscience Methods},
  title      = {{ReSync}: {Correcting} the trial-to-trial asynchrony of event-related brain potentials to improve neural response representation},
  year       = {2020},
  issn       = {0165-0270},
