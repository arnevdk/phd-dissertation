@InProceedings{Borra2020,
  author    = {Borra, Davide and Fantozzi, Silvia and Magosso, Elisa},
  booktitle = {{XV} {Mediterranean} {Conference} on {Medical} and {Biological} {Engineering} and {Computing} – {MEDICON} 2019},
  title     = {Convolutional {Neural} {Network} for a {P300} {Brain}-{Computer} {Interface} to {Improve} {Social} {Attention} in {Autistic} {Spectrum} {Disorder}},
