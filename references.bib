@Article{Wang2022,
  author   = {Wang, Yijing and Luo, Zhiguo and Zhao, Shaokai and Xie, Liang and Xu, Minpeng and Ming, Dong and Yin, Erwei},
  journal  = {Journal of Neuroscience Methods},
  title    = {Spatial localization in target detection based on decoding {N2pc} component},
  year     = {2022},
